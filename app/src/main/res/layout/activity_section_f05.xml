            <!-- cmf9a  Input-Numeric   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVcmf9a"
                style="@style/cardView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bottom">

                        <TextView
                            android:id="@+id/qtxt_cmf9a"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/q_cmf9a"
                            android:text="@string/cmf9a" />

                        <TextView
                            android:id="@+id/q_cmf9a"
                            style="@style/quesNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@id/qtxt_cmf9a"
                            android:layout_alignBottom="@id/qtxt_cmf9a"
                            android:text="@string/Q_cmf9a" />

                    </RelativeLayout>

                    <EditText
                        android:id="@+id/cmf9a"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        android:hint="@string/cmf9a"
                        android:inputType="number"
                        android:maxLength="2" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>


